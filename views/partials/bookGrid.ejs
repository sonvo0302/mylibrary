<% bookCoverClass=locals.large?'book-cover-large':'book-cover' %>

    <% bookGridClass=locals.large?'book-grid-large':'' %>

        <div class="book-grid <%= bookGridClass %>"></div>
        <% books.forEach(book => { %>
            <a href="/books/<%= book.id %>">
    <img class="book-cover <%= bookCoverClass %>" height="150" width="100" src="<%= book.coverImagePath %>"></a>
            <% }) %>